<Window x:Class="StarCitizenCompanion.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Impostazioni"
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <TextBlock Text="Percorso file log:" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,0">
            <TextBox x:Name="LogPathTextBox" Width="250"/>
            <Button Content="Sfoglia..." Margin="5,0,0,0" Click="Browse_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Durata overlay (s):" VerticalAlignment="Center"/>
            <TextBox x:Name="OverlayDurationTextBox" Width="50" Margin="5,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Salva" Width="75" Click="Save_Click"/>
            <Button Content="Annulla" Width="75" Margin="5,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>