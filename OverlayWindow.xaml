<Window x:Class="StarCitizenCompanion.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ShowActivated="False"
        Width="400" Height="70">
    <Border Background="#CC1E1E1E" CornerRadius="12" Padding="10" VerticalAlignment="Center">
        <TextBlock x:Name="MessageText"
                   TextAlignment="Center"
                   Foreground="White"
                   FontSize="20"
                   TextWrapping="Wrap"/>
    </Border>
</Window>