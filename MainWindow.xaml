<Window x:Class="StarCitizenCompanion.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarCitizenCompanion"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Text="Feed" 
                   FontSize="18" FontWeight="Bold"
                   Margin="0 0 0 10"/>
        
        <Button HorizontalAlignment="Right" Content="Impostazioni" Width="100" Margin="0,3,0,3" Click="SettingsButton_Click"/>

        <!-- Griglia dei dati -->
        <DataGrid x:Name="FeedGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Messaggio" Binding="{Binding MessageComposer}" Width="*"/>
                <DataGridTextColumn Header="Data" Binding="{Binding Log.Date}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>